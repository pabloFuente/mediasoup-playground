{
  "name": "mediasoup-server",
  "version": "1.0.0",
  "type": "module",
  "exports": "./index.js",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "start": "node --loader ts-node/esm src/index.ts",
    "dev": "npx nodemon",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "npx tsc",
    "build:bundle": "npm run build && npx esbuild dist/src/index.js --bundle --platform=node --outfile=out/index.cjs",
    "build:binary": "mkdir -p bin && npm run build:bundle && node --experimental-sea-config sea-config.json && cp $(command -v node) bin/mediasoup-server && npx postject bin/mediasoup-server NODE_SEA_BLOB bin/sea-prep.blob --sentinel-fuse NODE_SEA_FUSE_fce680ab2cc467b6e072b8b5df1996b2 && rm bin/sea-prep.blob",
    "lint": "npx eslint --fix",
    "format": "npx prettier --write .",
    "format:check": "npx prettier --check ."
  },
  "author": "https://github.com/pabloFuente",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@bufbuild/protobuf": "^1.10.0",
    "@eslint/compat": "^1.1.0",
    "async-lock": "^1.4.1",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "lodash": "^4.17.21",
    "mediasoup": "^3.14.8",
    "socket.io": "^4.7.5",
    "winston": "^3.13.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.6.0",
    "@tsconfig/node20": "^20.1.4",
    "@types/async-lock": "^1.4.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.17.6",
    "@types/node": "^20.14.10",
    "@typescript-eslint/eslint-plugin": "^8.0.0-alpha.41",
    "@typescript-eslint/parser": "^8.0.0-alpha.41",
    "esbuild": "^0.23.0",
    "eslint": "^9.6.0",
    "globals": "^15.8.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.2",
    "ts-jest": "^29.2.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.0.0-alpha.41"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run test && npm run test:coverage && npm run format"
    }
  }
}
