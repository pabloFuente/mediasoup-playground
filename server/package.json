{
  "name": "mediasoup-server",
  "version": "1.0.0",
  "type": "module",
  "exports": "./index.js",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "start": "node --loader ts-node/esm src/index.ts",
    "dev": "npx nodemon",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "npx tsc",
    "build:bundle": "npm run build && npx esbuild dist/src/index.js --bundle --platform=node --minify --outfile=out/index.cjs",
    "build:binary": "mkdir -p bin && npm run build:bundle && node --experimental-sea-config sea-config.json && cp $(command -v node) bin/mediasoup-server && npx postject bin/mediasoup-server NODE_SEA_BLOB bin/sea-prep.blob --sentinel-fuse NODE_SEA_FUSE_fce680ab2cc467b6e072b8b5df1996b2 && rm bin/sea-prep.blob",
    "lint": "npx eslint --fix",
    "format": "npx prettier --write .",
    "format:check": "npx prettier --check ."
  },
  "author": "https://github.com/pabloFuente",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@bufbuild/protobuf": "2.2.2",
    "@eslint/compat": "1.2.2",
    "async-lock": "1.4.1",
    "dotenv": "16.4.5",
    "express": "5.0.1",
    "lodash": "4.17.21",
    "mediasoup": "3.14.16",
    "semver": "^7.6.3",
    "socket.io": "4.8.1",
    "winston": "3.16.0"
  },
  "devDependencies": {
    "@eslint/js": "9.14.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.3.1",
    "@tsconfig/node20": "20.1.4",
    "@types/async-lock": "1.4.2",
    "@types/express": "5.0.0",
    "@types/jest": "29.5.14",
    "@types/lodash": "4.17.13",
    "@types/node": "22.9.0",
    "@types/semver": "^7.5.8",
    "@typescript-eslint/eslint-plugin": "8.13.0",
    "@typescript-eslint/parser": "8.13.0",
    "esbuild": "0.24.0",
    "eslint": "9.14.0",
    "globals": "15.12.0",
    "husky": "9.1.6",
    "jest": "29.7.0",
    "nodemon": "3.1.7",
    "prettier": "3.3.3",
    "ts-jest": "29.2.5",
    "ts-node": "10.9.2",
    "typescript": "5.6.3",
    "typescript-eslint": "8.13.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run test && npm run test:coverage && npm run format"
    }
  }
}
