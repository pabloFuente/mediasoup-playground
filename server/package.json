{
  "name": "mediasoup-server",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "npx ts-node -r tsconfig-paths/register src/main.ts",
    "dev": "npx nodemon",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "tsc",
    "build:bundle": "npm run build && esbuild dist/src/main.js --bundle --platform=node --outfile=out/main.js",
    "build:binary": "mkdir -p bin && npm run build:bundle && node --experimental-sea-config sea-config.json && cp $(command -v node) bin/mediasoup-server && npx postject bin/mediasoup-server NODE_SEA_BLOB bin/sea-prep.blob --sentinel-fuse NODE_SEA_FUSE_fce680ab2cc467b6e072b8b5df1996b2 && rm bin/sea-prep.blob",
    "lint": "npx eslint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "author": "https://github.com/pabloFuente",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@eslint/compat": "^1.1.0",
    "chalk": "^5.3.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.6.0",
    "@tsconfig/node20": "^20.1.4",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.10",
    "@typescript-eslint/eslint-plugin": "^8.0.0-alpha.41",
    "@typescript-eslint/parser": "^8.0.0-alpha.41",
    "esbuild": "0.23.0",
    "eslint": "^9.6.0",
    "globals": "^15.8.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.2",
    "ts-jest": "^29.2.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.0.0-alpha.41"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run test && npm run test:coverage && npm run format"
    }
  }
}
